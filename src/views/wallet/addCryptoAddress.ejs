    <script>
        const alertMess = (text) => {
            const msg = document.createElement('div');
            msg.setAttribute('data-v-1dcba851', '');
            msg.className = 'msg';

            const msgContent = document.createElement('div');
            msgContent.setAttribute('data-v-1dcba851', '');
            msgContent.className = 'msg-content v-enter-active v-enter-to';
            msgContent.style = '';
            msgContent.textContent = text;

            msg.appendChild(msgContent);
            document.body.appendChild(msg);

            setTimeout(() => {
                msgContent.classList.remove('v-enter-active', 'v-enter-to');
                msgContent.classList.add('v-leave-active', 'v-leave-to');

                setTimeout(() => {
                    document.body.removeChild(msg);
                }, 100);
            }, 1000);
        }

        $(document).ready(function () {
            // Function to fetch and display saved addresses
            function fetchSavedAddresses() {
                $.ajax({
                    type: 'GET',
                    url: '/api/webapi/withdrawalDetails',
                    dataType: 'json',
                    success: function (response) {
                        displaySavedAddresses(response && response.bankDetails || {});
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching saved addresses:', error);
                    }
                });
            }

            // Function to display saved addresses
            function displaySavedAddresses(address) {  
                $('#erc20Address').val(address.erc20_address);
                $('#maticAddress').val(address.matic_address);  
                $('#trc20Address').val(address.trc20_address);   
                $('#bnbAddress').val(address.bnb_address); 
            }

            fetchSavedAddresses();

             $('#withdrawalForm').submit(function (e) {
                e.preventDefault();

                var erc20Address = $('#erc20Address').val().trim();
                var bnbAddress = $('#bnbAddress').val().trim();
                var maticAddress = $('#maticAddress').val().trim();
                var trc20Address = $('#trc20Address').val().trim();

                if (erc20Address || bnbAddress || maticAddress || trc20Address) {
                    var requestData = {
                        erc20Address: erc20Address,
                        bnbAddress: bnbAddress,
                        maticAddress: maticAddress,
                        trc20Address: trc20Address
                    };

                    $.ajax({
                        type: 'POST',
                        url: '/api/webapi/addCryptoAddress',
                        data: requestData,
                        dataType: 'json',
                        success: function (response) {
                            alertMess(response.message)
                            fetchSavedAddresses(); // Refresh saved addresses after successful submission
                            $('#withdrawalForm')[0].reset(); // Reset form fields
                        },
                        error: function (xhr, status, error) {
                            alertMess(error)
                        }
                    });
                } else {
                    alertMess('Please fill out at least one address field')
                }
            });
        });
    </script>
